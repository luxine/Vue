{
  "name": "base",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite --mode dev --host 0.0.0.0",
    "dev/desktop": "cross-env TARGET=electron vite --mode desktop --host 0.0.0.0",
    "build/desktop": "vite build --mode desktop && electron-builder",
    "build/android": "vue-tsc -b && vite build --mode android && npx cap add android && npx cap copy android",
    "build": "vue-tsc -b && vite build --mode prod",
    "preview": "vite preview --mode prod --host",
    "lint/fix": "eslint src --ext .js,.ts,.vue --fix",
    "format": "prettier --write \"src/**/*.{js,ts,vue,css,scss,json,md}\"",
    "style": "yarn format/check && yarn lint && vue-tsc --noEmit",
    "fix": "yarn format && yarn lint/fix && vue-tsc --noEmit",
    "fix/fast": "lint-staged"
  },
  "dependencies": {
    "@msgpack/msgpack": "^3.1.2",
    "element-plus": "^2.9.10",
    "env": "^0.0.2",
    "ky": "^1.8.1",
    "nprogress": "^0.2.0",
    "pako": "^2.1.0",
    "pinia": "^3.0.2",
    "preline": "^3.0.1",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.3",
    "vue-loading-overlay": "^6.0.6",
    "vue-router": "^4.5.1",
    "yup": "^1.6.1"
  },
  "devDependencies": {
    "@capacitor/android": "^7.4.2",
    "@capacitor/cli": "^7.4.2",
    "@capacitor/core": "^7.4.2",
    "@eslint/js": "^9.26.0",
    "@tailwindcss/cli": "^4.1.7",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/vite": "^4.1.7",
    "@types/node": "^24.0.1",
    "@types/nprogress": "^0.2.3",
    "@types/pako": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/tsconfig": "^0.7.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "electron": "^36.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.4.0",
    "eslint-plugin-vue": "^10.1.0",
    "globals": "^16.1.0",
    "lint-staged": "^16.1.0",
    "patch-package": "^8.0.0",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "rollup-plugin-visualizer": "^6.0.3",
    "tailwindcss": "^4.1.7",
    "typescript": "~5.8.3",
    "unplugin-auto-import": "^19.2.0",
    "unplugin-vue-components": "^28.5.0",
    "vite": "^6.3.5",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6",
    "vite-plugin-vue-devtools": "^7.7.7",
    "vite-plugin-wasm": "^3.5.0",
    "vue-eslint-parser": "^10.1.3",
    "vue-tsc": "^2.2.8"
  },
  "lint-staged": {
    "*.{js,ts,vue,jsx,tsx}": [
      "prettier --write",
      "eslint --cache --fix --ignore-pattern 'src/cores/**'"
    ],
    "*.{css,scss,json,md}": [
      "prettier --write"
    ]
  },
  "build": {
    "appId": "com.example.myapp",
    "productName": "Vue App",
    "directories": {
      "output": "./.builds/windows/Vue App"
    },
    "files": [
      "dist/**",
      "dist-electron/**"
    ],
    "win": {
      "target": "nsis",
      "icon": "icons/win/icon.ico"
    }
  }
}
